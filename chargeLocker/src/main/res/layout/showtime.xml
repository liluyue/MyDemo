<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="#004400">

    <TextView
        android:id="@+id/hour_minute"
        android:layout_width="@dimen/cl_datetime_hour_width"
        android:layout_height="@dimen/cl_datetime_hour_height"
        android:layout_marginTop="@dimen/cl_datetime_margin_top"
        android:layout_marginLeft="@dimen/cl_datetime_margin_left"
        android:includeFontPadding="false"
        tools:text="10:10"
        android:textColor="@color/cl_datetime_hour_text_color"
        android:textSize="@dimen/cl_datetime_hour_textsize" />

    <TextView
        android:id="@+id/month_year"
        android:layout_width="250dp"
        android:layout_height="@dimen/cl_datetime_hour_textsize"
        android:layout_alignLeft="@id/hour_minute"
        android:layout_below="@id/hour_minute"
        android:singleLine="true"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        tools:text="星期一:7月4日"
        android:textColor="@color/cl_datetime_hour_text_color"
        android:textSize="@dimen/cl_datetime_month_textsize" />

    <ImageView
        android:id="@+id/setting"
        android:layout_width="@dimen/cl_datetime_setting_size"
        android:layout_height="@dimen/cl_datetime_setting_size"
        android:layout_alignTop="@id/hour_minute"
        android:layout_marginRight="@dimen/cl_datetime_margin_left"
        android:layout_alignParentRight="true"
        tools:src="@drawable/cl_btn_menu" />


</RelativeLayout>